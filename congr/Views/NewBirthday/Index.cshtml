@model congr.Models.Birthday

@{
    ViewData["Title"] = "Новое ДР";
}

<div class="container">
    <div class="row justify-content-md-center">
        <form class="border w-form rounded p-5" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fio">ФИО</label>
                <input asp-for="Fio" class="form-control" id="fio" />
                <span asp-validation-for="Fio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date">Когда ДР?</label>
                <input asp-for="date" class="form-control" id="date" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="photo">Фото именинника</label>
                <input type="file" class="form-control" id="photo" name="Photo">
            </div>

            <button type="submit" class="btn btn-primary">Добавить!</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
